# ------------------------------------------------------------
# MinIO local dev profile (docker-compose.minio.yml)
# ------------------------------------------------------------
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin123
MINIO_BUCKET=projex-sync-dev

# ------------------------------------------------------------
# Projex sync settings (for app Settings page or local tests)
# NOTE:
# - Local MinIO now uses path-style automatically.
# - You can use localhost/127.0.0.1 directly.
# ------------------------------------------------------------
SYNC_S3_ENDPOINT=http://127.0.0.1:9000
SYNC_S3_BUCKET=projex-sync-dev
SYNC_S3_ACCESS_KEY=minioadmin
SYNC_S3_SECRET_KEY=minioadmin123

# ------------------------------------------------------------
# Optional integration test config (src-tauri/tests/test_s3_minio.rs)
# ------------------------------------------------------------
SYNC_MINIO_TEST=1
# If omitted, tests fallback to SYNC_S3_* variables above.
SYNC_TEST_S3_ENDPOINT=http://127.0.0.1:9000
SYNC_TEST_S3_BUCKET=projex-sync-dev
SYNC_TEST_S3_ACCESS_KEY=minioadmin
SYNC_TEST_S3_SECRET_KEY=minioadmin123
SYNC_TEST_S3_DEVICE_ID=minio-test-device
SYNC_TEST_OBJECT_PREFIX=tests/minio
